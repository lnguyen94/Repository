<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.samford.shoppingwithfriends" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/title_activity_welcome" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".LoggedInActivity"
            android:label="@string/title_activity_logged_in" >
        </activity>
        <activity
            android:name=".AddFriendActivity"
            android:label="@string/title_activity_add_friend" >
        </activity>
        <activity
            android:name=".FriendListActivity"
            android:label="@string/title_activity_friend_list" >
        </activity>
        <activity
            android:name=".FriendDetailActivity"
            android:label="@string/title_activity_friend_detail" >
        </activity>
        <activity
            android:name=".AddWishlistActivity"
            android:label="@string/title_activity_add_item" >
        </activity>
        <activity
            android:name=".ItemListActivity"
            android:label="@string/title_activity_item_list" >
        </activity>
        <activity
            android:name=".ItemDetailActivity"
            android:label="@string/title_activity_item_detail" >
        </activity>
        <activity
            android:name=".DealsActivity"
            android:label="@string/title_activity_deals" >
        </activity>
        <activity
            android:name=".ReportItemActivity"
            android:label="@string/title_activity_report_item" >
        </activity>
    </application>

</manifest>
